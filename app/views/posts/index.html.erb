<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading"><h1>Posty</h1></div>
   <div class="panel-body">

    <table>
      <thead>
        <tr>
          <th>Opis</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.description %></td>
            <td><%= link_to 'Pokaż', post, class: 'btn btn-info btn-sm active' %></td>
            <td><%= link_to 'Edytuj', edit_post_path(post), class: 'btn btn-primary btn-sm active' %></td>
            <td><%= link_to 'Usuń', post, class: 'btn btn-danger btn-sm active', method: :delete, data: { confirm: 'Jestes pewny?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

   <div class="panel_footer"><%= link_to 'Nowy Post', new_post_path, class: 'btn btn-success btn-sm active'  %></div>
