<div id="posts" class="transitions-enabled">
  <% @posts.each do |post| %>
    <div class="box">
      <div class="panel panel-default">
        <%= link_to image_tag(post.image.url(:medium)), post %><br/>
        <div class="panel-body">
          <%= post.description %><br/>
          <br/><strong><%= post.user.name if post.user %></strong></br>
        </div>
        <% if post.user == current_user %>
          <div class="panel-footer">
              <%= link_to 'Edytuj', edit_post_path(post), class: 'btn btn-primary btn-sm active' %>
              <%= link_to 'UsuÅ„', post, class: 'btn btn-danger btn-sm active', method: :delete, data: { confirm: 'Jestes pewny?' } %>
          </div>
        <% end %>

      </div>

    </div>

  <% end %>
  <div class="center">
    <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
  </div>

  





   


