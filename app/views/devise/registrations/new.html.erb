<h2>Rejestracja</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :hasło %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> znaków minimum)</em>
    <% end %><br />
    <%= f.password_field :hasło, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :powtórz_hasło %><br />
    <%= f.password_field :powtórz_hasło, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Zarejestruj" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
